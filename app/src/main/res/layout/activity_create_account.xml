<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".account.CreateAccountActivity"
    android:background="@color/background_gray_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:contentDescription="@string/logo" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:textColor="@color/foreground_color"
                android:textSize="24sp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="170dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"
                android:background="@color/foreground_color"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_account_detail"
                android:layout_marginStart="6dp"
                android:justificationMode="inter_word"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/ic_baseline_local_phone_24" />

                <TextView
                    android:id="@+id/tvPhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="+91 7877939091"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btnPhoneCall"
                    android:layout_width="88dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/foreground_color"
                    android:text="Call"
                    android:textColor="@color/background_gray_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="90dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_baseline_mail_24" />

                <TextView
                    android:id="@+id/tvGamilLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="hatti@gmail.com"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFacebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/instagram" />

                <TextView
                    android:id="@+id/tvInstagramLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="https:/instagram/hatti.com"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivInstagram"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/facebook" />

                <TextView
                    android:id="@+id/tvFacebookLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="https:/facebook/hatti.com"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/foreground_color"
                android:text="@string/back"
                android:textColor="@color/background_gray_color"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>