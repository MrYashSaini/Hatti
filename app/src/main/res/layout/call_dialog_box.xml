<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="30dp"
    android:paddingStart="60dp"
    android:paddingEnd="60dp"
    android:paddingBottom="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCallDialogBoxImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_local_phone_24" />

    <TextView
        android:id="@+id/tvCallDialogBoxMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/loading"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivCallDialogBoxImg"
        app:layout_constraintStart_toStartOf="@+id/ivCallDialogBoxImg"
        app:layout_constraintTop_toBottomOf="@+id/ivCallDialogBoxImg" />

    <Button
        android:id="@+id/btnCallDialogBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/call"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvCallDialogBoxMsg"
        app:layout_constraintStart_toStartOf="@+id/tvCallDialogBoxMsg"
        app:layout_constraintTop_toBottomOf="@+id/tvCallDialogBoxMsg" />
</androidx.constraintlayout.widget.ConstraintLayout>